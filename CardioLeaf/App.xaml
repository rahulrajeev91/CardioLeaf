<Application x:Class="CardioLeaf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
         
    	<Style x:Key="GridStyle_hover" TargetType="{x:Type Grid}">
    		<Style.Triggers>
    			<Trigger Property="IsMouseOver" Value="False">
    				<Setter Property="Background" Value="White"/>
    			</Trigger>
    			<Trigger Property="IsMouseOver" Value="True">
    				<Setter Property="Background" Value="#FFDEDEDE"/>
    			</Trigger>
    		</Style.Triggers>
    	</Style>

        <Style x:Key="GridStyle_Selected" TargetType="{x:Type Grid}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="False">
                    <Setter Property="Background" Value="#FFA8C213"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF99B015"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Application.Resources>
</Application>
